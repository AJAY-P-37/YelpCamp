<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/map.css">


    <div class="card shadow my-5">
        <div id="cluster-map" class="card-img-top"></div>
        <h5 class="card-header">All Campgrounds</h5>
        <div class="card-body">


            <% for(let campground of camps){ %>
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-6">
                            <% if (campground.images.length> 0) { %>
                                <img src="<%= campground.images[0].url %>" alt="" class="card-img">
                                <% } else { %>
                                    <img src="https://directory.usacarry.com/wp-content/uploads/2021/06/
                            depositphotos_247872612-stock-illustration-no-image-available-icon-vector.jpeg" alt=""
                                        class="card-img">
                                    <% } %>

                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= campground.title %>
                                </h5>
                                <p class="card-text"><small class="text-muted">
                                        <%= campground.location %>
                                    </small></p>
                                <p class="card-text"><small class="text-muted">Uploaded By
                                        <strong>
                                            <%= campground.author.username %>
                                        </strong>
                                    </small>
                                </p>
                                <p class="card-text">$
                                    <%= campground.price %>
                                </p>

                                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
                                    role="button">View</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';

        const campMaps = '<%-JSON.stringify(camps)%>'
    </script>
    <script src="/javascripts/clusterMap.js"></script>