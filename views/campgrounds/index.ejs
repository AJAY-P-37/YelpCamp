<% layout('layouts/boilerplate') %>
    <div id="map" style="width: 100%; height: 300px;"></div>
    <h1>All Campgrounds</h1>
    <% for(let campground of camps){ %>
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <% if (campground.images.length> 0) { %>
                        <img src="<%= campground.images[0].url %>" alt="" class="card-img-top">
                        <% } else { %>
                            <img src="https://directory.usacarry.com/wp-content/uploads/2021/06/
                            depositphotos_247872612-stock-illustration-no-image-available-icon-vector.jpeg" alt=""
                                class="card-img-top">
                            <% } %>

                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text"><small class="text-muted">
                                <%= campground.location %>
                            </small></p>
                        <p class="card-text"><small class="text-muted">Uploaded By
                                <%= campground.author.username %>
                            </small></p>

                        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';

                const campMaps = '<%-JSON.stringify(camps)%>'
            </script>
            <script src="/javascripts/clusterMap.js"></script>