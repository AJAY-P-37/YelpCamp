<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">
            <div class="card m-2">
                <img src="<%= camp.image %>" alt="" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= camp.title %>
                    </h5>
                    <p class="card-text">
                        <%= camp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= camp.location %>
                    </li>
                    <li class="list-group-item">$
                        <%= camp.price %>/night
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%= camp._id %>/edit" class="card-link btn btn-sm btn-info d-inline">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= camp._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="/campgrounds">back</a>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2>Leave a Review</h2>
            <form action="/campgrounds/<%= camp._id %>/reviews" method="POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range" min="0" max="5" step="1" id="rating" name="review[rating]">
                </div>
                <div class="mb-3">
                    <label for="review" class="form-label">Review</label>
                    <textarea class="form-control" name="review[body]" id="review" cols="30" rows="3"
                        required></textarea>
                </div>
                <button class="btn btn-sm btn-success mb-3" type="submit">Submit</button>
            </form>

            <h3>Reviews</h3>
            <% for(let review of camp.reviews) { %>
                <div class="card mb-1">
                    <div class="card-body">
                        <p class="card-title">Rating:
                            <%= review.rating %>
                        </p>
                        <p class="card-text">Review:
                            <%= review.body %>
                        </p>
                        <form action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=DELETE"
                            method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>

                <% } %>
        </div>
    </div>