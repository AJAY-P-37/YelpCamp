<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="mt-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    Error
                </h4>

                <hr>
                <% if (process.env.NODE_ENV!=='production' ) { %>
                    <p class="mb-0">

                        <%= err.stack %>
                    </p>
                    <% } else { %>
                        <p class="mb-0">

                            <%= err.message %>
                        </p>

                        <% } %>

            </div>
        </div>
    </div>